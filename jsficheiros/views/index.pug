extends layout

block content
    .w3-container.w3-light-blue
            header.w3-container.w3-blue
                h2 Submeter ficheiros com AJAX
            form.w3-container.w3-sand(id="formulario")
                fieldset
                    legend Novo Ficheiro
                    input.w3-input.w3-border(type='file',name='ficheiro',id='fich')
                    legend Descrição
                    input.w3-input.w3-border(id='desc',type='text')
                    br
                    button.w3-button.w3-round.w3-border(id='adicionar') Submeter ficheiro
                    button.w3-button.w3-round.w3-border(id='limpar') Limpar Dados
            .w3-container.w3-blue
                label
                    h2 Lista de Ficheiros
            .w3-container.w3-sand
                table.w3-table.w3-bordered(id='ficheiros')
            footer.w3-container.w3-blue
                address Gerado por myUpApp